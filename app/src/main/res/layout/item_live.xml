<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_normal"
    android:layout_marginLeft="@dimen/padding_normal"
    android:layout_marginRight="@dimen/padding_normal"
    android:elevation="@dimen/app_bar_elevation"
    app:cardCornerRadius="5dip"
    >


    <com.mayi.douyu.widget.CustomSizeImageView
        android:id="@+id/iv_room_src"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:imageSizeType="home"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:background="@drawable/background_tv_name"
            android:textColor="@color/bg_255_255_255"
            android:textSize="10sp"
            android:transitionName="name"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_tv_title"
            android:textColor="@color/bg_255_255_255"
            android:textSize="10sp"
            android:transitionName="title"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>